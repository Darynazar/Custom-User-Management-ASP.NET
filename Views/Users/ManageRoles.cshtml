@model ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles for @Model.UserName</h2>

<form asp-action="UpdateRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Roles[i].IsSelected" />
            <label class="form-check-label" asp-for="Roles[i].IsSelected">
                @Model.Roles[i].RoleName
            </label>
        </div>
    }
    <button type="submit" class="btn btn-primary">Update Roles</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>