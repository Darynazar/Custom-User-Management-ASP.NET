@using System.Globalization
@model Test.Models.Letter

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .letterhead {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .letterhead img {
                max-height: 100px;
            }

        .letter-content {
            margin: 0 20px;
            direction: rtl;
        }

        .vertical-text {
            font-size: 12px;
        }

        .signature {
            text-align: left;
            margin: 20px 20px;
        }

            .signature img {
                max-height: 50px;
                vertical-align: middle;
            }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 12px;
        }

            .footer img {
                width: 100%;
                height: auto;
            }

        .h2text {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="letterhead">
            <img src="/logo/logo.png" alt="Logo" />
            <div>
                <img src="/logo/god_name.png" alt="God Name" />
            </div>
            <div class="vertical-text">
                Letter No: @Model.Id<br />
                @{
                    // Get the current date in Persian calendar
                    PersianCalendar persianCalendar = new PersianCalendar();
                    int year = persianCalendar.GetYear(DateTime.Now);
                    int month = persianCalendar.GetMonth(DateTime.Now);
                    int day = persianCalendar.GetDayOfMonth(DateTime.Now);
                    string persianDate = $"{year}/{month:D2}/{day:D2}"; // Format: YYYY/MM/DD
                }
                تاریخ: @persianDate
            </div>
        </div>
        <div class="letter-content">
            <h2 class="h2text">@Model.Title</h2>
            <p><strong>موضوع:</strong> @Model.Subject</p>
            <p><strong>از:</strong> @Model.Sender</p>
            <p><strong>به:</strong> @Model.Receiver</p>
            <p><strong>کارشناس:</strong> @Model.CurrentOrganization</p>
            <p><strong>نوضیحات:</strong> @Model.Description</p>
        </div>
        <div class="signature">
            <img src="/logo/signature.png" alt="Signature" />
            <strong>:امضا</strong>
        </div>
        <div class="footer">
            <img src="/logo/footer.png" alt="Footer" />
            <p>Confidential</p>
        </div>
    </div>
</body>
</html>