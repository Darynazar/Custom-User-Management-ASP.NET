@model Test.Models.Letter

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px; /* Set this to the footer image's width */
            margin: 0 auto;
        }

        .letterhead {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .letterhead img {
                max-height: 100px;
            }

        .letter-content {
            margin: 0 20px;
            direction: rtl;
        }

        .vertical-text {
            font-size: 12px;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 12px;
        }

       .footer img {
            width: 100%;
            height: auto;
        }
        .h2text {
          text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="letterhead">
            <img src="/logo/logo.png" alt="Logo" />
            <div>
                <img src="/logo/god_name.png" alt="God Name" />
            </div>
            <div class="vertical-text">
                Letter No: @Model.Id<br />
                Date: @DateTime.Now.ToString("MMMM dd, yyyy")
            </div>
        </div>
        <div class="letter-content">
            <h2 class="h2text">@Model.Title</h2>
            <p><strong>موضوع:</strong> @Model.Subject</p>
            <p><strong>از:</strong> @Model.Sender</p>
            <p><strong>به:</strong> @Model.Receiver</p>
            <p><strong>کارشناس:</strong> @Model.CurrentOrganization</p>
            <p><strong>نوضیحات:</strong> @Model.Description</p>
        </div>
        <div class="footer">
            <img src="/logo/footer.png" alt="Footer" />
            <p>Confidential</p>
        </div>
    </div>
</body>
</html>